import requests
import pandas as pd
import numpy as np
import datetime as dt

import matplotlib.pyplot as plt
import seaborn as sns
import folium
import shap

from sklearn.model_selection import StratifiedKFold
from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import accuracy_score


endtime = dt.date.today().isoformat()
starttime = (dt.date.today() - dt.timedelta(days=365*2)).isoformat()

USGS_URL = "https://earthquake.usgs.gov/fdsnws/event/1/query"
params = {
    "format": "geojson",
    "starttime": starttime,
    "endtime": endtime,
    "minmagnitude": 4.5
}

response = requests.get(USGS_URL, params=params)
data = response.json()


records = []

for feature in data.get("features", []):
    props = feature["properties"]
    coords = feature["geometry"]["coordinates"]

    records.append({
        "latitude": coords[1],
        "longitude": coords[0],
        "depth_km": coords[2],
        "magnitude": props["mag"],
        "time": pd.to_datetime(props["time"], unit="ms")
    })

df = pd.DataFrame(records)
df.dropna(inplace=True)

df["strength_class"] = (df["magnitude"] >= 6.0).astype(int)


plt.figure(figsize=(8,5))
plt.hist(df["magnitude"], bins=20, edgecolor="black")
plt.xlabel("Magnitude")
plt.ylabel("Frequency")
plt.title("Earthquake Magnitude Distribution")
plt.tight_layout()
plt.show()


X = df[["latitude", "longitude", "depth_km"]]
y = df["strength_class"]


model = RandomForestClassifier(
    n_estimators=200,
    random_state=42,
    class_weight="balanced"
)


skf = StratifiedKFold(n_splits=5, shuffle=True, random_state=42)
cv_scores = []

for train_idx, test_idx in skf.split(X, y):
    X_train, X_test = X.iloc[train_idx], X.iloc[test_idx]
    y_train, y_test = y.iloc[train_idx], y.iloc[test_idx]

    model.fit(X_train, y_train)
    preds = model.predict(X_test)
    cv_scores.append(accuracy_score(y_test, preds))

print("Stratified 5-Fold CV Accuracy:", cv_scores)
print("Mean CV Accuracy:", np.mean(cv_scores))


model.fit(X, y)


explainer = shap.TreeExplainer(model)
shap_values = explainer.shap_values(X)

shap.summary_plot(
    shap_values[1],
    X,
    feature_names=["Latitude", "Longitude", "Depth (km)"]
)


def classify_location(lat, lon, depth):
    sample = pd.DataFrame(
        [[lat, lon, depth]],
        columns=["latitude", "longitude", "depth_km"]
    )
    pred = model.predict(sample)[0]
    prob = model.predict_proba(sample)[0]
    label = "Strong" if pred == 1 else "Weak"
    return label, prob


print("New Delhi:", classify_location(28.6139, 77.2090, 10)[0])
print("Bhubaneswar, Odisha:", classify_location(20.2961, 85.8245, 15)[0])


world_map = folium.Map(location=[0, 0], zoom_start=2)

for _, row in df.iterrows():
    color = "red" if row["strength_class"] == 1 else "blue"
    folium.CircleMarker(
        location=[row["latitude"], row["longitude"]],
        radius=3,
        color=color,
        fill=True,
        fill_opacity=0.6
    ).add_to(world_map)

world_map


